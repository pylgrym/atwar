#!/usr/bin/env node
var debug = require('debug')('xp1');
var app = require('../app');

var io, socket, server;

app.set('port', process.env.PORT || 3000);

server = app.listen(app.get('port'), function() {
  debug('Express server listening on port ' + server.address().port);
});

// Added this:
io = require('socket.io');  // JG, added in www script.
io_socket = io.listen(server); // JG, added in www script.


var shame1=1;
function idCounter() {
  var tmp  = shame1;
  shame1 += 1;
  return tmp;
}


io_socket.on('connection', function (socket) {
    var mySocketId = idCounter();
    // console.log(socket)
    socket.emit('welcome', { message: 'Initial welcome', clientId: mySocketId });

    // When we receive 'send' stuff, we broadcast/relay it onwards:
    socket.on('pong', function (data) {
        /// console.log('on pong (server receive)',data);
        // let's not flood ourselves.
        // socket.emit('message', data);
    });

    socket.on('move-c-s', function (data) {
        console.log('on move');
        socket.broadcast.emit('move-s-c', data);
    });

    setInterval( function() {
        socket.emit('message', {'date': new Date()});
    }, 10000);    
});

